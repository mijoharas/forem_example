<h1>Sign in</h1>
<!-- <div class="container-fluid"> -->
  <div class="row-fluid">
    <div class="span6 offset3">
      <%= form_for(:session, url: sessions_path) do |f| %>

        <%= f.label :email %>
        <%= f.email_field :email%>

        <%= f.label :password %>
        <%= f.password_field :password %>
        <%= f.label :remember_me, class: "checkbox", data: {intro: "click here to have our website remember you", position: "left"} do %>
                <%= f.check_box :remember_me %>Remember me
        <% end %>

        <%= f.submit "Sign in", class: "btn btn-large btn-primary", data: {intro: "click here to sign in", position: "right"} %>
      <% end %>

      <p>New user? <%= link_to "Sign up now!", signup_path, data: {intro: "If you aren't a user yet sign up now!", position: "bottom"} %></p>
    </div>
  </div>
</div>
